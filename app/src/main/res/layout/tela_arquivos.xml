<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/corPrincipal"
    android:orientation="vertical"
    tools:context=".TelaArquivos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Seta Retorno -->
        <ImageView
            android:id="@+id/imgCadClienteSeta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_seta" />
    </LinearLayout>

    <!-- Titúlo Cadastro -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Cadastro"
        android:textColor="@color/corDestaque"
        android:textSize="35sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/corDestaque" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/corDestaque"
        android:text="* Anexar arquivo em .pdf, .png, .jpg ou .jpeg" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        app:cardBackgroundColor="@color/corDestaque"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currículo"
            android:textSize="35sp"
            android:textColor="@color/corPrincipal"
            android:gravity="center_horizontal"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:background="#797979"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Anexar arquivo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="25sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        app:cardBackgroundColor="@color/corDestaque"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Documento de Identidade"
            android:textSize="35sp"
            android:textColor="@color/corPrincipal"
            android:gravity="center_horizontal"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:background="#797979"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Anexar arquivo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="25sp" />


    </androidx.cardview.widget.CardView>

    <!-- Fim das Caixas de Texo -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/custom_button"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>